<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <type name="Magento\Catalog\Model\Product">

        <plugin name="plugin_a"
                type="Pankaj\PluginFlow\Plugin\PluginA"
                sortOrder="10"/>

        <plugin name="plugin_b"
                type="Pankaj\PluginFlow\Plugin\PluginB"
                sortOrder="20"/>

        <plugin name="plugin_c"
                type="Pankaj\PluginFlow\Plugin\PluginC"
                sortOrder="30"/>

    </type>

    <type name="Pankaj\PluginFlow\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">plugin_logger2</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">
                    Pankaj\PluginFlow\Logger\Handler
                </item>
            </argument>
        </arguments>
    </type>


</config>
